<form class="bg-light text-center col-md-12" action="/users/adduser" method="post">
    <div>
        <h1 class="text text-primary">Sign Up</h1>
    </div>
    <div class="form-group mt-3">
        <label class="text text-success">Name</label>
        <input class="form-control" type="text" name="name" required>
    </div>
    <div class="form-group mt-3">
        <label class="text text-success">UserName</label>
        <input class="form-control" type="text" name="username" required>
    </div>
    <div class="form-group mt-3">
        <label class="text text-success">Password</label>
        <input class="form-control" type="password" name="password" required>
    </div>
        <div class="form-group mt-3">
            
            <input class="form-control" type="hidden" name="admin_access" value="0" required>
        </div>
    <div class="form-group mt-3">
        <input class="btn btn-danger" type="submit" value="Add">
    </div>
    <div class="form-group mt-3">
        <a href="/login">Login</a>
    </div>
</form>